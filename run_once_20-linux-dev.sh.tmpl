{{- if eq .chezmoi.os "linux" -}}
#!/bin/bash
set -e

# Install ZSH
sudo apt install -y zsh
sudo chsh -s $(which zsh) $(whoami)

# Install Golang
curl -s -L -o golang.tar.gz https://dl.google.com/go/go1.14.3.linux-amd64.tar.gz
sudo tar -C /usr/local -xzf golang.tar.gz
rm -f golang.tar.gz

# Install Docker (but not on WSL)
{{ if not .is_wsl }}
curl -fsSL https://download.docker.com/linux/ubuntu/gpg | sudo apt-key add -
sudo add-apt-repository \
"deb [arch=amd64] https://download.docker.com/linux/ubuntu \
$(lsb_release -cs) \
stable"
sudo apt-get update
sudo apt-get install -y docker-ce docker-ce-cli containerd.io
sudo usermod -aG docker $USER

sudo curl -sL "https://github.com/docker/compose/releases/download/1.26.2/docker-compose-$(uname -s)-$(uname -m)" -o /usr/local/bin/docker-compose
sudo chmod +x /usr/local/bin/docker-compose
{{ end }}

{{- end }}

